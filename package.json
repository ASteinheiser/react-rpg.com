{
    "name": "roll-for-reaction",
    "version": "1.1.0",
    "private": true,
    "homepage": "https://matteas.nz/roll-for-reaction",
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
